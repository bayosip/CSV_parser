<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/off_white_background</item>
    </style>

    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_24dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="android:ThemeOverlay.Material.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="android:ThemeOverlay.Material.Light" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/text_color_light</item>
        <item name="spinBars">true</item>
    </style>

    <style name="App_Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@color/appBackground_white</item>
        <item name="android:background">@drawable/curved_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
