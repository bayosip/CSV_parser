<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layoutSearchFilter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/underline_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:src="@drawable/ic_search_24dp"
            android:scaleType="centerInside"
            />

        <EditText
            android:id="@+id/editSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:hint="@string/search_car_model"
            android:focusable="false"/>

        <ImageButton
            android:id="@+id/buttonFilter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_filter_24dp"
            android:background="@android:color/white"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/inside_padding"
        android:id="@+id/textNoMatchesFound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No Match Found!!!"
        android:textSize="@dimen/title_size"
        android:textColor="@color/text_color_dark"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/inside_padding"
        android:id="@+id/listCarInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutSearchFilter"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/car_data_item">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/buttonLoadMore"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="@dimen/inside_padding"
        android:text="Click to Load More"
        android:visibility="gone"
        style="@style/App_Button"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>