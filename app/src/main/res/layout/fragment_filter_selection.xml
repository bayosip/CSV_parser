<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Spinner
        android:id="@+id/selectFilterSpinner"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </Spinner>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_marginTop="@dimen/inside_padding"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectFilterSpinner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/filter_features"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5"
            android:weightSum="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:background="@drawable/underline_view"
                android:padding="@dimen/inside_padding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year:"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/text_color_dark"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/textStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/green_light_color"
                        android:text="0000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_dark"
                        android:text="To"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/textEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/green_light_color"
                        android:text="0000"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:padding="@dimen/inside_padding"
                android:background="@drawable/underline_view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_dark"/>
                <TextView
                    android:id="@+id/textGender"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:text="Male"
                    android:textColor="@color/colorAccentDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.25"
                android:padding="@dimen/activity_vertical_margin"
                android:background="@drawable/underline_view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:text="Countries:"
                    android:textColor="@color/text_color_dark"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listCountries"
                    android:layout_marginTop="@dimen/inside_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_filter_item">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.25"
                android:padding="@dimen/activity_vertical_margin"
                android:background="@drawable/underline_view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:text="Colors:"
                    android:textColor="@color/text_color_dark"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listColours"
                    android:layout_marginTop="@dimen/inside_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_filter_item">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="75dp"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/buttonApplyFilter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/button_text"
                android:padding="@dimen/inside_padding"
                android:layout_marginEnd="@dimen/inside_padding"
                android:drawableStart="@drawable/ic_navigate_before_24dp"
                android:background="@drawable/curved_button"
                android:textColor="@android:color/white"
                android:text="@string/back_to_results"
                android:textAllCaps="false"
                android:gravity="center"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/buttonClearFilter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/button_text"
                android:padding="@dimen/inside_padding"
                android:drawableStart="@drawable/ic_cancel_24dp"
                android:background="@drawable/curved_button"
                android:textColor="@android:color/white"
                android:text="Clear Filter"
                android:textAllCaps="false"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>