<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@drawable/underline_view">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_logo_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textCarName"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_dark"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_big"
        android:text="Car Model"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo"/>

    <TextView
        android:layout_marginTop="@dimen/inside_padding"
        android:id="@+id/textCarYear"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccentDark"
        android:textSize="@dimen/text_size_big"
        android:text="Car year"
        app:layout_constraintTop_toBottomOf="@id/textCarName"
        app:layout_constraintStart_toEndOf="@id/logo"/>

    <TextView
        android:layout_marginTop="@dimen/inside_padding"
        android:id="@+id/textOwnerName"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_big"
        android:text="Car owner"
        app:layout_constraintTop_toBottomOf="@id/textCarYear"
        app:layout_constraintStart_toEndOf="@id/logo"/>

    <ImageButton
        android:id="@+id/buttonFullDetails"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_navigate_next_24dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>